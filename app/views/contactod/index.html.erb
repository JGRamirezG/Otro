                <div class="form-group">
                    <label class="control-label" for="Correo">Dirección de Correo Electrónico</label>
                    <%= f.text_field :correo %>
                </div>
                <div class="form-group">
                    <label class="control-label" for="Mensaje" id="p1">Mensaje</label>
                    <%= f.cktext_area :descripcion %>
                </div>
                <div class="form-group">                
