    <script type="text/javascript">
    function mostrar(id) {
        if (id == "0") {
            $("#LOCAL").show();
            $("#DOM").hide();
            $("#DOM1").hide();
            document.getElementById("p1").innerHTML = "Mensaje";
        }
        if(id == "1"){
            $("#LOCAL").hide();
            $("#DOM").show();
            $("#DOM1").show();
            document.getElementById("p1").innerHTML = "Oferta Laboral";
        }
    }
    </script>
